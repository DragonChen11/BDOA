<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:padding="10dp"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/topPanel_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/back_normal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:text="Large Text"
        android:id="@+id/topPanel_center"
        android:layout_toRightOf="@+id/topPanel_left"
        android:layout_centerVertical="true"
    />
    <Button
        android:id="@+id/topPanel_setting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"

        android:background="@mipmap/setting"
        />
    <Button
        android:id="@+id/topPanel_save"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:text="保存"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@mipmap/dialog_btn_yes_normal"
        android:visibility="gone"
        />

</RelativeLayout>